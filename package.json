{
  "name": "next-boilerplate",
  "description": "A simple Next.js boilerplate",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": "Gusttavo Castro (castrogusttavo)",
  "license": "MIT",
  "keywords": ["nextjs", "starter", "typescript", "boilerplate"],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint --write",
    "format": "biome format --write",
    "format:check": "biome check --write",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "dotenv": "^16.4.7",
    "postcss": "^8.4.49",
    "tailwindcss": "^4.0.0-beta.8",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "husky": "^9.1.7",
    "typescript": "^5.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "biome lint --write",
      "commit-msg": "commitlint --edit"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "nodeModulesDir": "auto"
}
