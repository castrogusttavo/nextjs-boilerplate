{
  "name": "next-boilerplate",
  "description": "A simple Next.js boilerplate",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": "Gusttavo Castro (castrogusttavo)",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript",
    "boilerplate"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "deno run -A npm:@biomejs/biome lint --write",
    "format": "deno run -A npm:@biomejs/biome format --write",
    "format:check": "deno run -A npm:@biomejs/biome check --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/postcss": "4.1.11",
    "dotenv": "17.0.1",
    "fs": "0.0.1-security",
    "next": "15.3.5",
    "path": "0.12.7",
    "postcss": "8.5.6",
    "puppeteer": "24.11.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "4.1.4",
    "zod": "4.0.15"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "10.4.21",
    "husky": "9.1.7",
    "typescript": "^5"
  }
}
